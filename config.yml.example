# Description: Configuration file for go-igate
# License: MIT
# Notes: This file is written in YAML format. For more information on YAML, see https://yaml.org/


# call-sign of the DigiGate (your call sign including SSID) - e.g. "N0CALL-10"
station-callsign: ""
# size of in-memory cache for keeping track of received packets
cache-size: 1000
# set to true if you want to use the digipeater
enable-digipeater: true
# digipeater configuration mimics Direwolf defaults; adjust for local policy
digipeater:
  alias-patterns:
    - "^WIDE1-1$"
  wide-patterns:
    - "^WIDE[1-7]-[1-7]$"
    - "^TRACE[1-7]-[1-7]$"
    - "^HOP[1-7]-[1-7]$"
    - "^[A-Z]{2}[1-7]-[1-7]$"
  # optional list of SSn prefixes (e.g. UT, ID) this digi should service
  ssn-prefixes: []
  # drop duplicates seen during this window (e.g. 30s)
  dedupe-window: 30s
# soundcard-input-name is the name of the device to use for audio input. If empty, the system default device will be used.
soundcard-input-name: ""
# soundcard-output-name is the name of the device to use for audio output. If empty, the system default device will be used.
soundcard-output-name: ""
sdr:
  #Set to true to enable using an RTL-SDR dongle
  enabled: true
  # RTL-SDR binary
  exec: "rtl_fm"
  # frequency to listen on
  frequency: "144.390M"
  # device index
  device: "0"
  # gain of rtl-sdr
  gain: "49.6"
  # ppm error - 0 for no error
  ppm-error: "0"
  # squelch level - 0 for no squelch
  squelch-level: "0"
  # sample rate of rtl-sdr - 22050 for APRS
  sample-rate: "22050"
  additional-flags: ""
multimon:
  # multimon-ng binary
  path: "multimon-ng"
  additional-flags: ""
transmitter:
  # enabled: set to true to enable tx functionality
  enabled: true
  # baud rate of serial connection to the radio
  baud-rate: 1200
  # time to wait for serial connection to the radio
  read-timeout: "5s"
  # duration of HDLC flag preamble before payload (helps VOX/PTT settle)
  tx-delay: 400ms
  # optional mark tone appended after packet to hold VOX/PTT engaged
  tx-tail: 75ms
  use-aplay: true
igate:
  # enabled: set to true to enable DigiGate to act as an iGate.
  enabled: true
  beacon:
    # enable to send beacon messages
    enabled: false
    # interval for RF beacons (>=10m). Falls back to "interval" if omitted.
    rf-interval: 30m
    # interval for APRS-IS beacons (>=10m). Falls back to "interval" if omitted.
    is-interval: 30m
    # set to true to suppress RF beaconing or APRS-IS beaconing respectively.
    disable-rf: false
    disable-tcp: false
    # set to true to keep APRS-IS connection for gating others but skip your own beacon uploads
    disable-is-beacon: false
    max-rf-attempts: 3
    aprsfi-verification:
      enabled: false
      api-key: ""
      delay: 30s
      max-attempts: 3
      timeout: 10s
    # optional legacy interval applied to both RF and APRS-IS when the per-path
    # values above are not provided.
    # interval: 30m
    # comment (e.g. position/status). Example shows !DAO-style with primary table symbol.
    comment: "=0000.00NS00000.00W#Go iGate"
    # RF path for the beacon; avoid implicit WIDE1-1 hops from fixed stations.
    rf-path: "WIDE2-1"
    # Path inserted on APRS-IS frames; qAR + your callsign is common.
    is-path: "TCPIP*,qAR,N0CALL-10"
    # Optional secondary RF schedules (e.g. direct beacons). Each must be >=10m.
    additional-rf-beacons:
    - path: ""
      interval: 10m
  aprsis:
    # enable to connect to APRS-IS server for iGate
    enabled: false
    # server to connect to (noam.aprs2.net:14580 for North America)
    server: "noam.aprs2.net:14580"
    #passcode of iGate can be obtained from https://apps.magicbug.co.uk/passcode/ (do so with your SSID - eg. N0CALL-10)
    passcode: ""
    # filter for APRS-IS server - e.g. "r/lat/lon/radius" to scope traffic
    filter: "r/00.00/000.00/150"
